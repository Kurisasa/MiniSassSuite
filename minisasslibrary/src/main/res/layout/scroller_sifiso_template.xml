<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sifiso_pic" />

    <TextView
        android:id="@+id/number"
        style="@style/TextStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_margin="@dimen/padding_top_10"
        android:text="@string/sifiso_message" />

    <TextView
        android:id="@+id/textView12"
        style="@style/TextStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number"
        android:layout_alignStart="@+id/number"
        android:layout_alignTop="@+id/image"
        android:layout_marginTop="61dp"
        android:text="Sifiso Mtshweni"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />


</RelativeLayout>
